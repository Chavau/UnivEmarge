<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/id_cardview"
    android:scrollbars="vertical"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:contentPadding="5dp"
    cardview:cardCornerRadius="4dp"
    cardview:cardElevation="2dp">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/cal_icon"/>

        <TextView
            android:id="@+id/tv_jourSemaine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginVertical="16dp"
            android:textColor="@color/blanc"
            android:textSize="20sp"
            tools:text="Mardi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            tools:text="16/08/2019" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:id="@+id/tv_intituleCours"
            tools:text="Intelligence Artificielle"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:id="@+id/tx_details"
            tools:text="De 9h00 Ã  12h00"
            android:textSize="17sp"/>
    </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>