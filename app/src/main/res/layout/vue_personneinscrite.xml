<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@drawable/fonds"
       >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/imageview_man_woman"
            android:layout_margin="10dp"
            tools:src="@drawable/man"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_nom_persInscr"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="Omar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_prenom_persInscr"
                    android:layout_marginTop="2dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="Toibrani"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_num_etudiant"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    tools:text="35NH69A"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_activite_type"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="Loisirs"/>
            </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:src="@drawable/light_on"/>


    </LinearLayout>

</android.support.v7.widget.CardView>